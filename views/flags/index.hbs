<div class="gradient-background">
    {{#if isApproved}}
        {{> header }}
        {{#if user}}
            {{#each posts}}
                <div class="flag-block" id="{{post_id}}">
                    {{#each flag}}
                        <div class="flag-block__author">
                            {{this.author}}
                        </div>
                            {{#if postimage}}
                                <div class="flag-block__featured-image">
                                    <img src="/images/{{this.postimage}}" />
                                </div>
                            {{/if}}
                        <div class="flag-block__description">{{this.description}}</div>
                        <a href="javascript:void(0);" class="trash-post">Trash</a>
                    {{/each}}
                </div>   
            {{/each}}
        {{else}}
            <h2>You are not authorised to see this page</h2>
        {{/if}}
    {{else}}
<h2>Admin has not approved you as Connect19 user yet</h2>
    {{/if}}
</div>