<div class="image-background">
  <div class="container-login">
    <div class="header">        
      <img src="../images/logo-new.svg" alt="" />
    </div>      
      {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
      {{/if}}
      {{#if error_msg}}
        <div class="alert alert-error">{{error_msg}}</div>
      {{/if}}
      {{#if error}}
        <div class="alert alert-error">{{error}}</div>
      {{/if}}

    <form method="post" action="/users/login">
      <div class="form-group singup-foorm">
        <i class="fas fa-user"></i> <input type="text" class="form-group__control" name="username" placeholder="Username">
      </div>
      <div class="form-group singup-foorm">    
        <i class="fas fa-lock"></i> <input type="password" class="form-group__control" name="password" placeholder="Password">
        <a href="/forgot-password" class="form-group__forgot-password">Forgot Password</a>
      </div>
      <button type="submit" class="form-group__login-btn background-color--blue">LOG IN</button>  
    </form>
    <a href="signup" class="signup-btn" style="background-color:transparent; border: #fff solid 1px; box-shadow: none; ">SIGN UP</a>
  </div>
</div>