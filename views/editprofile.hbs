<div class="profile-background">
    {{#if isApproved}}
    <a href="/"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a> 
<div class="edit-profile">      
<form method="post" action="/users/editprofile" enctype="multipart/form-data" class="edit-profile-form">
    <div class="edit-profile__profile-image">
        <img src="../images/{{{user_pic}}}" alt="" />
    </div>
 <input type="file" name="profilepic"/> 
<input type="text" name ="mata" value="{{user.username}}" class="edit-profile-form__username" />
<input type="text" name="description" value="{{{user_description}}}" class="edit-profile-form__description" />
<input type="submit" value="save changes" class="edit-profile-form__save-button" />
</form>
<a href="#" class="edit-profile-form__change-password">change password</a>
</div>
{{else}}
<h2>Admin has not approved you as Connect19 user yet</h2>
    {{/if}}
</div>