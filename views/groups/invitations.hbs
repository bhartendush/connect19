<div class="gradient-background">
    <div class="wall-header">
        <div class="wall-header__connect-tab">Connect Wall</div>
        <div class="wall-header__chat-tab">Chat</div>
    </div>  <!-- wall-header -->
    <div class="drop-menu">
        <a href="javascript:void();"><img src="/images/menu.svg" class="drop-menu__button" /></a>
    </div>
    <h1>Group Invitations</h1>
    {{#each group}}
    <div class="group-invitation-block" id="{{group_id}}">
        <div class="group-invitation-block__group-text">You have got invitation to join <a href="/groups/{{group_id}}" class="group-invitation-block__group-name">{{this.groupname}}</a></div>
        <button class="group-invitation-block__accept-invitation">Accept invitation</button>
    </div>
    {{/each}}
</div>