<div class="gradient-background">
    {{#if isApproved}}
    {{> header }}

    {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
    {{/if}}

    {{#if error_msg}}
        <div class="alert alert-error">{{error_msg}}</div>
    {{/if}}

    {{#if error}}
        <div class="alert alert-error">{{error}}</div>
    {{/if}}

    {{#if groupname}}
        <div class="alert alert-error">Groupname has taken already try new</div> 
    {{/if}}
    
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-error">{{msg}}</div>
        {{/each}}
    {{/if}}    
    
  
<!-- List down all groups-->
    {{#each group}}    
        <div class="group-block" id="{{this.group_id}}">
            <div class="group-block__left">
                <div class="group-block__name"><a href="/groups/{{group_id}}">{{this.groupname}}</a></div>
                <div class="group-block__description">{{this.description}}</div>
                <div class="group-block__author">{{this.createdby}}</div>
            </div>
            {{#if ../isadmin}}
                {{#if ispinned}}
                    <input type="checkbox" name="pinpost" class="pingroup" checked/>
                {{else}}
                    <input type="checkbox" name="pinpost" class="pingroup" />
                {{/if}}
            {{/if}}
            
            {{#if isprivate}}
                {{#compare createdby ../user operator="=="}}
                    <div class="group-block__right">                
                        <!-- <button id="join-group">Send invitation</button>  -->
                        <a href="/groups/{{group_id}}/join">Send invitation</a>
                    </div>
                {{/compare}}
            {{/if}}                      
        </div>
    {{/each}}
    
    <!-- Create groups -->
    <h1>Create Groups</h1>    
    <form method="POST" action="/groups" class="group-form">        
    <input type="text" name ="title" class="group-form__title" />
    <input type="text" name="description" class="group-form__description" />
    <input type="radio" name="private" value="false" checked="checked" /> Public
    <input type="radio" name="private" value="true" /> Private
    <button id="create_group" class="group-form__btn">Create Group</button>    
    </form>
    {{else}}
<h2>Admin has not approved you as Connect19 user yet</h2>
    {{/if}}
</div>